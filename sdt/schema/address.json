{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/address-schema",
    "type": "object",
    "properties": {
        "address": {
            "type": "object",
            "properties": {
                "address1": {
                    "type": "string"
                },
                "address2": {
                    "type": "string"
                },
                "locality": {
                    "type": "string"
                },
                "region": {
                    "type": "string"
                },
                "postalCode": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                }
            },
            "required": [
                "address1",
                "region",
                "country"
            ]
        }
    }
}