{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "transaction",
    "$ref": "schema:common",
    "description": "transaction",
    "type": "object",
    "properties": {
        "payer_account": {
            "type": "string",
            "description": "",
            "maxLength": 300
        },
        "payee_account": {
            "type": "string",
            "description": "",
            "maxLength": 300
        },
        "amount": {
            "type": "string",
            "pattern": "^(0|([1-9]+[0-9]*))(\\.[0-9]{1,2})?$",
            "minLength": 1,
            "description": "A Monetary Amount"
        },
        "result": {
            "type": "string",
            "description": "",
            "maxLength": 300
        },
        "token": {
            "type": "string",
            "description": "",
            "maxLength": 300
        },
        "settled_amount": {
            "type": "integer"
        },
        "pending_amount": {
            "type": "integer"
        },
        "currency": {
            "type": "string",
            "description": "",
            "maxLength": 300
        }
    },
    "required": [
        "",
        "",
        ""
    ]
}