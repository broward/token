{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "person",
    "$ref": "schema:common",
    "description": "person",
    "type": "object",
    "properties": {
        "account": {
            "type": "string"
        },
        "username": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "fullName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "interests": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "account",
        "username",
        "email"
    ]
}